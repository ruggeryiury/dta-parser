{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "DOM",
            "ES2015",
            "ES2021"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/"
    ]
}
